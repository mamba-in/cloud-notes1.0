{
  "name": "cloud-notes",
  "version": "1.0.0",
  "description": "cloud-notes",
  "main": "index.js",
  "author": "WangLei",
  "license": "ISC",
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "lint": "prettier --write 'docs/**/*.md'",
    "release": "node scripts/release.js",
    "deploy": "bash deploy.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run release && git add . && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "preserve": "never"
  },
  "devDependencies": {
    "@vuepress/plugin-back-to-top": "^1.0.0-rc.1",
    "@vuepress/plugin-google-analytics": "^1.0.0-rc.1",
    "gray-matter": "^4.0.2",
    "husky": "1.3.1",
    "lint-staged": "7.2.0",
    "markdown-toc": "1.2.0",
    "prettier": "^1.14.0",
    "vuepress": "^1.1.0"
  }
}
